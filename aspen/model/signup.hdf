Form {
    Title = Sign up for Aspen
    Caption = Create your personal account.
    Action = /backup/action/signup
    Inputs {
        0 {
            Label = Username
            ID = username
            Input {
                Type = text
                Name = username
                Attributes = required autofocus
            }
        }
        1 {
            Label = Email Address
            ID = email
            Input {
                Type = email
                Name = email
                Attributes = required
            }
        }
        2 {
            Label = Password
            ID = password
            Input {
                Type = password
                Name = password
                Attributes = required
            }
        }
        3 {
            Label = Confirm Password
            ID = confirm
            Input {
                Type = password
                Attributes = required
            }
        }
    }
    Buttons {
        0 {
            Type = submit
            ID = create-btn
            Class = btn btn-primary
            Text = Create an account
        }
    }
}
